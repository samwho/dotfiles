URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
URxvt.loginShell:           true
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           true
URxvt*font:                 xft:Hack:pixelsize=26:style=medium

! Fix font space
URxvt.letterSpace: -1.5

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.iso14755:               False
URxvt.perl-ext-common:        default,matcher,selection-to-clipboard,urxvtcopypaste,font-size
URxvt.matcher.button:         1
URxvt.urlLauncher:            google-chrome

URxvt.keysym.C-minus:       font-size:decglobal
URxvt.keysym.C-plus:        font-size:incglobal
URxvt.keysym.C-equal:       font-size:reset
URxvt.keysym.C-question:    font-size:show

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

